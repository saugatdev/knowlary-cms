# Payload CMS Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration (MongoDB)
# For local development with Docker: mongodb://mongo:27017/payload
# For local development without Docker: mongodb://localhost:27017/payload
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database_name
DATABASE_URI=mongodb://mongo:27017/payload

# Payload Secret (required)
# Generate a random string for production: openssl rand -base64 32
PAYLOAD_SECRET=your-secret-key-here

# Server URL (optional, defaults to http://localhost:3000)
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# Preview Secret (optional, for preview functionality)
PREVIEW_SECRET=your-preview-secret-here

# Cron Secret (optional, for scheduled jobs)
CRON_SECRET=your-cron-secret-here

# Email Configuration (Resend)
# Get your API key from: https://resend.com/api-keys
# Make sure to verify your domain in Resend dashboard before sending emails
RESEND_API_KEY=re_your_resend_api_key_here

# Email From Configuration
# Use a verified domain email address (e.g., noreply@yourdomain.com)
# The email address must be from a domain you've verified in Resend
EMAIL_FROM_ADDRESS=noreply@yourdomain.com
EMAIL_FROM_NAME=Your Site Name

# Email Reply-To (optional)
# If you want replies to go to a different address
# EMAIL_REPLY_TO=support@yourdomain.com

# Cloudinary Configuration (for media storage)
CLOUDINARY_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Vercel Configuration (optional, for Vercel deployments)
# VERCEL_PROJECT_PRODUCTION_URL=your-project.vercel.app

